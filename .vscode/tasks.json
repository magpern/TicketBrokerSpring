{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "npm: install",
            "type": "npm",
            "script": "install",
            "path": "frontend",
            "problemMatcher": []
        },
        {
            "label": "npm: dev",
            "type": "npm",
            "script": "dev",
            "path": "frontend",
            "isBackground": true,
            "dependsOn": "npm: install",
            "problemMatcher": {
                "owner": "typescript",
                "pattern": {
                    "regexp": "^([^\\s].*):(\\d+):(\\d+):\\s+(warning|error)\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*",
                    "endsPattern": ".*Local:.*"
                }
            }
        },
        {
            "label": "mvn: compile",
            "type": "shell",
            "command": "mvn compile",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "mvn: clean install",
            "type": "shell",
            "command": "mvn clean install",
            "options": {
                "cwd": "${workspaceFolder}/backend"
            },
            "problemMatcher": "$tsc"
        }
    ]
}