{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Spring Boot - Dev",
            "request": "launch",
            "mainClass": "com.ticketbroker.TicketBrokerApplication",
            "projectName": "ticketbroker-api",
            "args": "--spring.profiles.active=dev",
            "env": {
                "POSTGRES_DEV_PASSWORD": "CHANGE_ME",
                "POSTGRES_PROD_PASSWORD": "CHANGE_ME",
                "LOG_FILE": "./logs/application.log",
                "MAIL_USERNAME": "",
                "MAIL_PASSWORD": "",
                "ADMIN_PASSWORD": "CHANGE_ME",
                "SPRING_PROFILES_ACTIVE": "dev"
            },
            "vmArgs": "-Dspring.profiles.active=dev",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "java",
            "name": "Spring Boot - Prod",
            "request": "launch",
            "mainClass": "com.ticketbroker.TicketBrokerApplication",
            "projectName": "ticketbroker-api",
            "args": "--spring.profiles.active=prod",
            "env": {
                "POSTGRES_DEV_PASSWORD": "CHANGE_ME",
                "POSTGRES_PROD_PASSWORD": "CHANGE_ME",
                "MAIL_USERNAME": "",
                "MAIL_PASSWORD": "",
                "ADMIN_PASSWORD": "CHANGE_ME",
                "SPRING_PROFILES_ACTIVE": "prod"
            },
            "vmArgs": "-Dspring.profiles.active=prod",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}/backend",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend",
            "sourceMaps": true,
            "sourceMapPathOverrides": {
                "webpack:///src/*": "${webRoot}/src/*"
            }
        },
        {
            "type": "chrome",
            "request": "attach",
            "name": "Attach to Chrome",
            "port": 9222,
            "webRoot": "${workspaceFolder}/frontend",
            "sourceMaps": true
        }
    ],
    "compounds": [
        {
            "name": "Spring Boot + React (Dev)",
            "configurations": [
                "Spring Boot - Dev",
                "Launch Chrome against localhost"
            ],
            "preLaunchTask": "npm: dev"
        }
    ]
}
